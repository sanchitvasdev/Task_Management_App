<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/widget_taskitem_padding"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/radio_button_image"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        app:srcCompat="@drawable/ic_radio_button"
        android:focusable="true"
        android:contentDescription="@string/checkTaskImageDescription" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/radio_button_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/darkGrey"
        android:textSize="14sp" />

    </RelativeLayout>